<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center"
        android:paddingVertical="12dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DriverMonitor"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black" />
    </LinearLayout>

    <TextView
        android:id="@+id/test_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Тестирование завершено!"
        android:textColor="@color/dark_green"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/test_completed"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Дата и время завершения:\n--.--.----, --:--"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/results_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/text_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/text_emotional_exhaustion_label"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Эмоциональное истощение"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_emotional_exhaustion_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/text_emotional_exhaustion_label"
                app:layout_constraintEnd_toStartOf="@id/icon_emotional_exhaustion"
                app:layout_constraintBottom_toBottomOf="@id/text_emotional_exhaustion_label"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/icon_emotional_exhaustion"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/hint"
                android:contentDescription="Подсказка по эмоциональному истощению"
                app:layout_constraintTop_toTopOf="@id/text_emotional_exhaustion_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/text_emotional_exhaustion_label"/>

            <TextView
                android:id="@+id/text_depersonalization_label"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Деперсонализация"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/text_emotional_exhaustion_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/text_depersonalization_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/text_depersonalization_label"
                app:layout_constraintEnd_toStartOf="@id/icon_depersonalization"
                app:layout_constraintBottom_toBottomOf="@id/text_depersonalization_label"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/icon_depersonalization"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/hint"
                android:contentDescription="Подсказка по деперсонализации"
                app:layout_constraintTop_toTopOf="@id/text_depersonalization_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/text_depersonalization_label"/>

            <TextView
                android:id="@+id/text_personal_achievement_label"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Редукция личных достижений"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/text_depersonalization_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/text_personal_achievement_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/text_personal_achievement_label"
                app:layout_constraintEnd_toStartOf="@id/icon_personal_achievement"
                app:layout_constraintBottom_toBottomOf="@id/text_personal_achievement_label"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/icon_personal_achievement"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/hint"
                android:contentDescription="Подсказка по редукции личных достижений"
                app:layout_constraintTop_toTopOf="@id/text_personal_achievement_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/text_personal_achievement_label"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вы набрали 0 баллов"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/results_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonBackToMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:layout_margin="16dp"
        android:text="Вернуться в меню"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.9"/>
</androidx.constraintlayout.widget.ConstraintLayout>