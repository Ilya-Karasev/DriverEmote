<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Дата теста -->
        <TextView
            android:id="@+id/textTestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.04.2025"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/green" />

        <!-- Баллы -->
        <TextView
            android:id="@+id/textEmotionalExhaustionScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Эмоциональное выгорание: 18"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textDepersonalizationScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Деперсонализация: 7"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textPersonalAchievementScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редукция личных достижений: 12"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Общий балл -->
        <TextView
            android:id="@+id/textTotalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Общий балл: 37"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>